<?xml version="1.0" encoding="utf-8"?>


<LinearLayout






    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_height="395dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:backgroundTint="#CFD8DC"
        card_view:cardElevation="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="#37474F"
                android:text="Today is January 18th 2017"
                android:textSize="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:id="@+id/imageView" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="42dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imageView"
                >




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"
                        android:text="Fajr"
                        android:id="@+id/textView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Tex"
                        android:id="@+id/farjTextView" />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"

                        android:text="Duhr"
                        android:id="@+id/textView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/duhrTextView" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/darker_gray"/>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"
                        android:text="Asr"
                        android:id="@+id/textView5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/AsrTextView" />
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"
                        android:text="Maghrib"
                        android:id="@+id/textView7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/maghribTextView" />


                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/darker_gray"/>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold"
                        android:text="Isha"
                        android:id="@+id/textView9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Text"
                        android:id="@+id/ishaTextView" />
                </LinearLayout>


            </LinearLayout>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:textColor="#FFA000"
                android:layout_height="wrap_content"
                android:text="Configure"
                android:id="@+id/revealConfigurationsButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                />

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:id="@+id/configCardViewID"

                android:backgroundTint="#424242"
                android:layout_height="395dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                card_view:cardElevation="8dp"
                android:visibility="invisible"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONFIGURATIONS"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:textColor="#FFFF"
                        />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp"
                        >


                           <TextView
                            android:id="@+id/schoolTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SCHOOL: "
                            android:textStyle="bold"
                            android:textColor="#FFFF"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hanafi"
                            android:textColor="#FFFF"
                            android:buttonTint="#FFFF"
                            android:id="@+id/hanafiRadioButton" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shafi"
                            android:buttonTint="#FFFF"
                            android:textColor="#FFFF"

                            android:id="@+id/shafiRadioButton" />


                    </LinearLayout>

                    <Button
                        style="?android:attr/borderlessButtonStyle"

                        android:id="@+id/backFromRevealID"
                        android:layout_width="wrap_content"
                        android:textColor="#FFFF"
                        android:layout_height="wrap_content"
                        android:text="BACK"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"

                        />


                </LinearLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>





    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="8dp"
        android:paddingBottom="8dp"
        android:backgroundTint="#37474F"
        card_view:cardElevation="8dp"
        android:layout_gravity="center_vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"

                 android:elevation="4dp"
                 android:focusable="true"
                 android:focusableInTouchMode="true"
                 android:longClickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFO"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="#FFFF"
            android:textStyle="bold"
            />

                 <TextView
             android:id="@+id/infoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="italic"
            android:textColor="#FFFF"
            android:layout_marginLeft="16dp"
     />

                 <ProgressBar
                     android:id="@+id/progressView"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="16dp"
                     android:layout_marginRight="16dp"
                     android:layout_marginLeft="16dp"
                     android:progressTint="#FFC107"
                     android:progressBackgroundTint="#FFFF"
                     style="?android:attr/progressBarStyleHorizontal"
                      />


                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="start"/>


             </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
